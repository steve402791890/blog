<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Singername</th>
      <th>Songtitle</th>
      <th>Releaseyear</th>
      <th>Albumtitle</th>
      <th>Favorite</th>
      <th>Songlength</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.singername %></td>
        <td><%= song.songtitle %></td>
        <td><%= song.releaseyear %></td>
        <td><%= song.albumtitle %></td>
        <td><%= song.favorite %></td>
        <td><%= song.songlength %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

